<form action="/" role="form">
    <div class="form-group required">
        <label class="control-label" for="subject">Ticket Subject</label>
        <input type="text"
               class="form-control"
               id="subject"
               name="subject"
               placeholder="Short summary of your ticket"
               value="<%= subject %>">
    </div>
    <div class="form-group required">
        <label class="control-label" for="description">Description</label>
        <textarea class="form-control"
                  id="description"
                  name="description"
                  rows="5"
                  placeholder="Type in detailed description of your ticket"><%= description %></textarea>
    </div>
    <div class="form-group">
        <label class="control-label" for="priority">Priority</label>
        <select class="form-control"
                id="priority"
                name="priority">
            <option value="low"<% if (priority.toLowerCase() == 'low') { %> selected<% } %>>Low</option>
            <option value="medium"<% if (priority.toLowerCase() == 'medium') { %> selected<% } %>>Medium</option>
            <option value="high"<% if (priority.toLowerCase() == 'high') { %> selected<% } %>>High</option>
        </select>
    </div>
    <% if(typeof is_new !== 'undifined'){ %>
      <div id="ticket-attachment"></div>
      <div id="ticket-attachment-drop"></div>
    <% } %>
</form>