<a href="<%= baseUrl %>" class="logo">
  <img src="<%= basePath %>/bundles/diamantefront/img/logo.png" alt="DiamanteDesk"/>
</a>
<% if(typeof hash !== 'undefined') { %>
<form role="form">
  <input name="hash" type="hidden" value="<%= hash %>"/>
  <div class="form-group">
    <label class="control-label" for="password">New Password</label>
    <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Enter New Password">
  </div>
  <p>Back to <a href="#login">Sign in</a></p>
  <button type="submit" class="btn btn-primary btn-lg btn-block js-submit">Set New Password</button>
</form>
<% } else { %>
<form role="form">
  <div class="form-group">
    <label class="control-label" for="email">Email</label>
    <input type="text" class="form-control input-lg" id="email" name="email" placeholder="Enter Email">
  </div>
  <p>Back to <a href="#login">Sign in</a></p>
  <p><button type="submit" class="btn btn-primary btn-lg js-submit">Reset Password</button></p>
</form>
<% } %>
